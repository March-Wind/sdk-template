{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": false,
    "outDir": "./lib",
    "jsx": "react",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["**/*"]
}
